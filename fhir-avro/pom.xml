<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.carrera.fhir.avro</groupId>
  <artifactId>fhir-avro</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>fhir-avro</name>
  <url>http://maven.apache.org</url>
  <dependencies>
    <dependency>
      <groupId>org.apache.avro</groupId>
      <artifactId>avro</artifactId>
      <version>1.10.2</version>
    </dependency>
  </dependencies>

<build>
<plugins>
  <plugin>
  <groupId>org.apache.avro</groupId>
  <artifactId>avro-maven-plugin</artifactId>
  <version>1.10.2</version>
  <executions>
    <execution>
      <phase>generate-sources</phase>
      <goals>
        <goal>schema</goal>
      </goals>
      <configuration>
        <sourceDirectory>${project.basedir}/src/main/avro/</sourceDirectory>
        <outputDirectory>${project.basedir}/src/main/java/</outputDirectory>
        <includes>
         <include>**/*.avsc</include>
        </includes>
        <imports>
            <import>${project.basedir}/src/main/avro/DateTime.avsc</import>
            <import>${project.basedir}/src/main/avro/Quantity.avsc</import>
            <import>${project.basedir}/src/main/avro/Coding.avsc</import>
            <import>${project.basedir}/src/main/avro/Extension.avsc</import>
            <import>${project.basedir}/src/main/avro/CodeableConcept.avsc</import>
            <import>${project.basedir}/src/main/avro/Reference.avsc</import>
            <import>${project.basedir}/src/main/avro/DiagnosticReport.avsc</import>
            <import>${project.basedir}/src/main/avro/SimpleCode.avsc</import>
            <import>${project.basedir}/src/main/avro/ValueSetPointer.avsc</import>
            <import>${project.basedir}/src/main/avro/ValueSet.avsc</import>
            <import>${project.basedir}/src/main/avro/identifier_record.avsc</import>
            <import>${project.basedir}/src/main/avro/name_record.avsc</import>
            <import>${project.basedir}/src/main/avro/Patient.avsc</import>
            <import>${project.basedir}/src/main/avro/Condition_Stage.avsc</import>
            <import>${project.basedir}/src/main/avro/Condition.avsc</import>
            <import>${project.basedir}/src/main/avro/MedicationRequest.avsc</import>
            <import>${project.basedir}/src/main/avro/MedicationStatement.avsc</import>
            <import>${project.basedir}/src/main/avro/AllergyIntolerance_Reaction.avsc</import>
            <import>${project.basedir}/src/main/avro/AllergyIntolerance.avsc</import>
            <import>${project.basedir}/src/main/avro/Observation.avsc</import>
            <import>${project.basedir}/src/main/avro/Range.avsc</import>
            <import>${project.basedir}/src/main/avro/Ratio.avsc</import>
            <import>${project.basedir}/src/main/avro/Goal_Target.avsc</import>
            <import>${project.basedir}/src/main/avro/Goal.avsc</import>
            <import>${project.basedir}/src/main/avro/Period.avsc</import>
            <import>${project.basedir}/src/main/avro/RiskAssessment_Prediction.avsc</import>
            <import>${project.basedir}/src/main/avro/RiskAssessment.avsc</import>
            <import>${project.basedir}/src/main/avro/Coverage.avsc</import>
            <import>${project.basedir}/src/main/avro/Insurance.avsc</import>
            <import>${project.basedir}/src/main/avro/Item.avsc</import>
            <import>${project.basedir}/src/main/avro/Procedure.avsc</import>
            <import>${project.basedir}/src/main/avro/MedicationAdministration.avsc</import>
            <import>${project.basedir}/src/main/avro/EncounterDiagnosis.avsc</import>
            <import>${project.basedir}/src/main/avro/Encounter.avsc</import>
        </imports>
      </configuration>
    </execution>
  </executions>
</plugin>
<plugin>
  <groupId>org.apache.maven.plugins</groupId>
  <artifactId>maven-compiler-plugin</artifactId>
  <configuration>
    <source>1.8</source>
    <target>1.8</target>
  </configuration>
</plugin>
</plugins>
</build>
</project>
